#!/bin/bash

# DATABASE_NAME="ltr"
# USER_NAME="raf"
# PASSWORD="qwq121"
# TABLE_NAME="lg_tab_1"

DATABASE_NAME="ltr4"
USER_NAME="seerodja"
PASSWORD="ttt555"
TABLE_NAME="tableetza"

# Connecting to PostgreSQL
sudo -u postgres psql -c "CREATE DATABASE $DATABASE_NAME;"

# Creating relation
sudo -u postgres psql -c "CREATE ROLE $USER_NAME WITH LOGIN PASSWORD '$PASSWORD';"

# Give the user the rights to the created database
sudo -u postgres psql -c "GRANT ALL PRIVILEGES ON DATABASE $DATABASE_NAME TO $USER_NAME;"


# sudo -u postgres bash
# Creating the table 
# sudo -u postgres psql -d $DATABSE_NAME -c "CREATE TABLE $TABLE_NAME (
psql -U postgres -d $DATABASE_NAME -c "CREATE TABLE $TABLE_NAME (
 id SERIAL PRIMARY KEY,
 tmstmp TIMESTAMP NOT NULL,
 srcip inet NOT NULL,
 len varchar(255) NOT NULL,
 ttl varchar(255),
 innerid varchar(255),
 spt varchar(255),
 dpt varchar(255),
 wndw varchar(255)
);" 


# Giving the user the rights to the sequence
# sudo -u postgres psql -c "GRANT ALL PRIVILEGES ON TABLE $TABLE_NAME TO $USER_NAME;"